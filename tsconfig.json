{
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist/",
        "rootDir": "./src",
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "esnext"
        ],
        "sourceMap": true
    },
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.js",
        "node_modules"
    ],
    "include": [
        "src"
    ]
}
