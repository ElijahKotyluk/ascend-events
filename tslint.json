{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "ban-types": [
            true,
            ["Boolean", "Use `boolean` instead."],
            ["Number", "User `number` instead."],
            ["Object", "Use `object` instead."],
            ["String", "Use `string` instead."],
            ["Symbol", "Use `symbol` instead."]
        ],
        "quotemark": [
            true,
            "single"
        ],
        "radix": false,
        "interface-name": false
    },
    "jsRules": {
        "quotemark": [
            true,
            "single"
        ],
        "radix": false
    }
}
